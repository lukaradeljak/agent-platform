# ─── PostgreSQL ──────────────────────────────────────────────────────
POSTGRES_DB=agent_metrics_db
POSTGRES_USER=agent_platform
POSTGRES_PASSWORD=CHANGE_ME_strong_password

# ─── Redis ───────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ─── Collector (FastAPI) ─────────────────────────────────────────────
# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
COLLECTOR_SECRET_KEY=CHANGE_ME_random_32_char_string

# ─── Flower (UI de monitoreo) ────────────────────────────────────────
FLOWER_USER=admin
FLOWER_PASSWORD=CHANGE_ME_strong_password

# ─── Web App (usuario read-only de la DB) ────────────────────────────
WEBAPP_READONLY_PASSWORD=CHANGE_ME_strong_password

# ─── Secrets de agentes ──────────────────────────────────────────────
# Agregar las keys que necesiten tus agentes:
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
