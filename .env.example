# ─── PostgreSQL ──────────────────────────────────────────────────────
POSTGRES_DB=agent_metrics_db
POSTGRES_USER=agent_platform
POSTGRES_PASSWORD=CHANGE_ME_strong_password

# ─── Redis ───────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ─── Collector (FastAPI) ─────────────────────────────────────────────
# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
COLLECTOR_SECRET_KEY=CHANGE_ME_random_32_char_string

# ─── Flower (UI de monitoreo) ────────────────────────────────────────
FLOWER_USER=admin
FLOWER_PASSWORD=CHANGE_ME_strong_password

# ─── Web App (usuario read-only de la DB) ────────────────────────────
WEBAPP_READONLY_PASSWORD=CHANGE_ME_strong_password

# ─── Sync métricas → Supabase (dashboard del cliente) ───────────────
# URL del endpoint de sync en la app web (Vercel)
VERCEL_SYNC_URL=https://app.acemsystems.com/api/cron/sync
# Secret compartido entre el VPS y Vercel para autenticar el sync
# Debe coincidir con CRON_SECRET en las env vars de Vercel
CRON_SECRET=CHANGE_ME_same_as_vercel_cron_secret

# ─── Secrets de agentes ──────────────────────────────────────────────
# Las keys de cada agente van en agents/<nombre>/.env (no aquí)
# Ver agents/lead_generation/.env.example como referencia
